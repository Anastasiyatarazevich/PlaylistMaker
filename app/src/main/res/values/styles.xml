<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuButtons"  parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="cornerRadius">@dimen/btn_corners</item>
        <item name="android:textAllCaps">false</item>
        <item name="icon">@drawable/light_mode_search</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>

    </style>

    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_gravity">end</item>
        <item name="iconTint">?attr/colorTertiary</item>
    </style>

    <style name="FrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/list_item_padding</item>
    </style>

    <style name="TextViewSettingsListItems">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
</resources>

