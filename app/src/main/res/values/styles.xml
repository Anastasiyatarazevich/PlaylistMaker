<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="cornerRadius">@dimen/btn_corners</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>

    </style>

    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_gravity">end</item>
        <item name="iconTint">?attr/colorTertiary</item>
    </style>

    <style name="FrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/list_item_padding</item>
    </style>

    <style name="EditTextSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:drawableStart">@drawable/light_mode_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">?attr/editTextColor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">?attr/editTextColor</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">12dp</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/textAppearanceBody2</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="TextViewSettingsListItems">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="MaterialTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">@dimen/padding_vertical</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="MaterialToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="elevation">4dp</item>
        <item name="navigationIcon">@drawable/light_mode_back</item>
        <item name="titleTextColor">?attr/textAppearanceBody2</item>
        <item name="titleTextAppearance">@style/TextViewHeader</item>
    </style>

    <style name="TextViewRecycler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="titleTextColor">?attr/textAppearanceBodySmall</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="PlaceholderFoundNothing">
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">@dimen/padding_top</item>
        <item name="android:text">@string/nothing_was_found</item>
        <item name="android:fontFamily">font/ys_display_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/textAppearanceBody2</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:visibility">gone</item>
        <item name="android:textFontWeight">400</item>

    </style>

    <style name="NoConnectionPlaceholder">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">font/ys_display_regular</item>
        <item name="android:textColor">?attr/textAppearanceBody2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textFontWeight">400</item>

    </style>

    <style name="UpdateButton">
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/update</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">?attr/buttonTint</item>
        <item name="android:fontFamily">font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>

    </style>
</resources>

