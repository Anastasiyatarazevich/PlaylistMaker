<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/back_button"
        style="@style/MaterialToolbar"
        app:title="@string/settings" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher1"
        style="@style/MaterialTextView"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="0dp"
        android:text="@string/theme"
        android:thumbTintMode="screen"
        app:thumbTint="@color/thumb_color"
        app:trackTint="@color/track_color"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/share_app"
        style="@style/MaterialTextView"
        android:drawableEnd="@drawable/light_mode_share"
        android:text="@string/share" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/support"
        style="@style/MaterialTextView"
        android:drawableEnd="@drawable/light_mode_support"
        android:text="@string/support" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_agreement"
        style="@style/MaterialTextView"
        android:drawableEnd="@drawable/light_mode_arrow_forward"
        android:text="@string/user_agreement" />

</LinearLayout>